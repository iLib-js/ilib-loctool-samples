{
    "name": "sample-webos-json-subdir",
    "id": "sample-webos-json-subdir",
    "projectType": "custom",
    "sourceLocale": "en-KR",
    "pseudoLocale": {
        "zxx-XX": "debug",
        "zxx-Hebr-XX": "debug-rtl",
        "zxx-Cyrl-XX": "debug-cyrillic",
        "zxx-Hans-XX": "debug-han-simplified"
    },
    "resourceDirs": {
        "json": "resources"
    },
    "plugins": [
        "ilib-loctool-webos-json"
    ],
    "excludes": [
        ".*",
        "xliffs",
        "resources",
        "common"
    ],
    "settings": {
        "xliffsDir": "./xliffs",
        "locales":[
            "en-GB",
            "en-US",
            "ko-KR",
            "ru-RU",
            "zh-Hans-CN"
        ],
        "webos": {
            "commonXliff": "./common"
        },
        "jsonMap": {
            "mappings": {
                "**/appinfo.json": {
                    "template": "[dir]/[resourceDir]/[localeDir]/[filename]"
                }
            }
        }
    }
}