{
    "name": "sample-regex",
    "id": "sample-regex",
    "projectType": "custom",
    "sourceLocale": "en-US",
    "pseudoLocale": "zxx-XX",
    "plugins": [
        "ilib-loctool-regex"
    ],
    "excludes": [
        "xliffs"
    ],
    "settings": {
        "xliffsDir": "./xliffs",
        "locales":[
            "ko-KR",
            "ru-RU"
        ],
        "regex": {
            "mappings": {
                "src/**/*.jsx": {
                    "resourceFileType": "ilib-loctool-javascript-resource",
                    "template": "resources/[locale].json",
                    "sourceLocale": "en-US",
                    "expressions": [
                        {
                            "expression": "\\bRB.getString\\s*\\(\\s*(?<source>\"([^\"]|\\\\\")*\"|'([^']|\\\\')*')\\s*\\)",
                            "flags": "g",
                            "datatype": "javascript",
                            "resourceType": "string",
                            "keyStrategy": "hash"
                        },
                        {
                            "expression": "\\bRB.getString\\s*\\(\\s*(?<source>\"([^\"]|\\\\\")*\"|'([^']|\\\\')*')\\s*,\\s*(?<key>\"([^\"]|\\\\\")*\"|'([^']|\\\\')*')\\s*\\)",
                            "flags": "g",
                            "datatype": "javascript",
                            "resourceType": "string"
                        }
                    ]
                },
                "src/**/*.tmpl": {
                    "resourceFileType": "ilib-loctool-php-resource",
                    "template": "resources/translations-[locale].php",
                    "sourceLocale": "en-US",
                    "expressions": [
                        {
                            "expression": "\\{\\s*(?<source>'([^']|\\\\')*')\\s*,\\s*t:\\s*(?<key>'([^']|\\\\')*')\\s*\\}",
                            "flags": "gi",
                            "datatype": "php",
                            "resourceType": "string",
                            "keyStrategy": "truncated"
                        }
                    ]
                }
            }
        }
    }
}
